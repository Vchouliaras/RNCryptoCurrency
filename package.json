{
  "name": "AALearningCryptoCurrency",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:debugger": "env REACT_DEBUGGER=\"$([ -d '/Applications/React Native Debugger.app' ] && echo \"open 'rndebugger://set-debugger-loc?host=localhost&port=8081' --args\")\" yarn start",
    "watch:tsc": "tsc -w",
    "start:all": "concurrently --kill-others \"yarn watch:tsc\" \"yarn start:debugger\"",
    "ios": "cd ios && rm -rf build && cd .. && react-native run-ios --simulator=\"iPhone X\"",
    "ios:bundle": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle",
    "ios:release": "react-native run-ios --configuration Release",
    "android": "cd android && ./gradlew clean && cd .. && react-native run-android",
    "android:bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/main.jsbundle",
    "android:prerelease": "cd android && ./gradlew assembleRelease",
    "android:release": "react-native run-android --variant=release",
    "lint": "eslint src/ --ext tsx,ts",
    "lint:fix": "eslint src/ --fix",
    "pretty": "prettier --write \"./src/**/*.{tsx,ts}\"",
    "test": "jest --verbose",
    "test:update": "jest --verbose --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "src/**/*.(tsx|ts)": [
      "yarn pretty",
      "git add"
    ]
  },
  "dependencies": {
    "@shoutem/ui": "^0.23.9",
    "art": "^0.10.3",
    "d3": "^5.7.0",
    "lodash.findlast": "^4.6.0",
    "lodash.groupby": "^4.6.0",
    "lodash.takeright": "^4.1.1",
    "react": "16.6.3",
    "react-native": "0.57.8"
  },
  "devDependencies": {
    "@types/d3": "^5.5.0",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.12",
    "@types/jsdom": "^12.2.1",
    "@types/lodash.findlast": "^4.6.4",
    "@types/lodash.groupby": "^4.6.4",
    "@types/lodash.takeright": "^4.1.4",
    "@types/react": "^16.4.18",
    "@types/react-native": "^0.57.6",
    "babel-jest": "23.6.0",
    "concurrently": "^4.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.5.0",
    "eslint-plugin-typescript": "^0.12.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jsdom": "^13.1.0",
    "lint-staged": "^8.0.4",
    "metro-react-native-babel-preset": "0.48.1",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "react-dom": "16",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "16.6.0-alpha.8af6728",
    "shoutem-ui-types": "^1.0.8",
    "ts-jest": "^23.10.5",
    "typescript": "~3.1.1",
    "typescript-eslint-parser": "^20.0.0"
  }
}
